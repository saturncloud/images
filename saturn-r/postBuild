# https://cran.rstudio.com/bin/linux/debian/

sudo apt update
sudo apt install -y \
    --no-install-recommends \
        software-properties-common

sudo apt update
sudo apt install -y \
    r-base \
    r-base-dev \
    r-base-core \
    r-base-dev 

sudo apt install -y \
    jupyter-client \
    devscripts \
    libxml2 \
    libxml2-dev \
    libcurl4-openssl-dev \
    libssl-dev \
    libzmq3-dev \
    qpdf

# make it possible to `install.packages()` - write permissions required.
sudo chown 1000:1000 -R $R_LIBS
sudo chmod 777 -R $R_LIBS

# install other packages
sudo Rscript -e "install.packages(c( \
        'caret', \
        'data.table', \
        'devtools', \
        'dplyr', \
        'ggplot2', \
        'IRkernel', \
        'keras', \
        'lightgbm', \
        'lubridate', \
        'Rcpp', \
        'readr', \
        'remotes', \
        'reticulate', \
        'stringr', \
        'tensorflow', \
        'tidyr', \
        'xgboost' \
    ), Ncpus = max(c(1, parallel::detectCores() - 1)), \
    dependencies = c('LinkingTo', 'Depends', 'Imports') \
    )"
